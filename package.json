{
  "name": "htmlmodule",
  "version": "0.1.4",
  "description": "DOM assembler",
  "keywords": [
    "xml",
    "dom",
    "html",
    "javascript",
    "module",
    "library"
  ],
  "homepage": "https://aristov.github.io/htmlmodule",
  "bugs": "https://github.com/aristov/htmlmodule/issues",
  "license": "MIT",
  "author": "Vyacheslav Aristov <vv.aristov@gmail.ru> (http://twitter.com/aristov7)",
  "files": [
    "lib/",
    "shim/"
  ],
  "main": "./lib",
  "directories": {
    "dist": "./dist",
    "lib": "./lib",
    "example": "./docs/lib/test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aristov/htmlmodule.git"
  },
  "scripts": {
    "dist": "webpack && MIN=true webpack",
    "docs": "DOCS=true webpack",
    "api": "esdoc -c esdoc.json",
    "pretest": "MIN=true webpack",
    "test": "karma start",
    "start": "npm run dist && npm run docs && npm run api",
    "serve": "webpack && DOCS=true ES6=true WATCH=true webpack",
    "gh-pages": "git checkout gh-pages && git rebase origin/master && npm start && git commit -am 'rebuild' && git push -f && git checkout master",
    "push-dist": "git checkout gh-pages && git add dist -f && git commit --amend -m 'build' && git push -f && git status",
    "static": "python -m SimpleHTTPServer 8080",
    "lint": "eslint lib --ignore-pattern *.spec.js --quiet && eslint lib/*.spec.js --env browser,mocha && eslint shim && eslint docs --ignore-pattern docs/api && eslint webpack.config.js --env node"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel": "^6.5.2",
    "babel-core": "^6.9.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.8.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "codemirror": "^5.19.0",
    "css-loader": "^0.25.0",
    "dom4": "^1.8.3",
    "esdoc": "^0.4.8",
    "eslint": "^3.9.0",
    "karma": "^1.3.0",
    "karma-mocha": "^1.2.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-sauce-launcher": "^1.0.0",
    "karma-sinon": "^1.0.5",
    "karma-webpack": "^1.8.0",
    "mocha": "^3.1.0",
    "postcss-loader": "^1.0.0",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.1",
    "whatwg-fetch": "^1.0.0"
  },
  "engines": {
    "node": ">=0.6"
  }
}
