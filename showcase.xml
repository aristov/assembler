<main>
    <article>
        <h1>Link</h1>
        <section>
            <link href="//yandex.ru">Simple</link>
        </section>
        <section>
            <link href="//google.ru" rel="external">External</link>
        </section>
    </article>
    <article>
        <h1>Button</h1>
        <section>
            <button>Simple</button>
        </section>
        <section>
            <button pressed="true">Pressed toggle button</button>
        </section>
        <section>
            <button disabled="true">Disabled</button>
        </section>
        <section>
            <button pressed="true" disabled="true">Pressed disabled toggle button</button>
        </section>
    </article>
    <article>
        <h1>Check box</h1>
        <section>
            <checkbox name="checkbox" value="on">Simple</checkbox>
        </section>
        <section>
            <checkbox checked="true" name="checkbox-checked" value="on">Checked</checkbox>
        </section>
        <section>
            <checkbox disabled="true" name="checkbox-disabled" value="on">Disabled</checkbox>
        </section>
        <section>
            <checkbox checked="true" disabled="true" name="checkbox-checked-disabled" value="on">Checked disabled</checkbox>
        </section>
    </article>
    <article>
        <h1>Radio group</h1>
        <section>
            <radiogroup name="radiogroup" label="Simple">
                <radio value="first">First</radio>
                <radio value="second">Second</radio>
                <radio value="third">Third</radio>
            </radiogroup>
        </section>
        <section>
            <radiogroup name="radiogroup-checked" label="Checked">
                <radio value="first">First</radio>
                <radio value="second" checked="true">Second</radio>
                <radio value="third">Third</radio>
            </radiogroup>
        </section>
        <section>
            <radiogroup disabled="true" name="radiogroup-checked-disabled" label="Disabled">
                <radio value="first">First</radio>
                <radio value="second">Second</radio>
                <radio value="third" checked="true">Third</radio>
            </radiogroup>
        </section>
    </article>
    <article>
        <h1>List box</h1>
        <section>
            <listbox name="listbox" label="Simple">
                <option value="first">First</option>
                <option value="second">Second</option>
                <option value="third">Third</option>
            </listbox>
        </section>
        <section>
            <listbox disabled="true" name="listbox" label="Disabled">
                <option value="first">First</option>
                <option value="second" checked="true">Second</option>
                <option value="third">Third</option>
            </listbox>
        </section>
    </article>
    <article>
        <h1>Text box</h1>
        <section>
            <textbox hasclear="true" label="Simple"/>
        </section>
        <section>
            <textbox hasclear="true" value="Text" label="Filled"/>
        </section>
        <section>
            <textbox hasclear="true" disabled="true" value="Text" label="Disabled"/>
        </section>
    </article>
    <article>
        <h1>Text area</h1>
        <section>
            <textarea label="Simple"/>
        </section>
        <section>
            <textarea disabled="true" value="Text" label="Disabled"/>
        </section>
    </article>
    <article>
        <h1>Date box</h1>
        <section>
            <datebox label="Simple" value="12.06.2016"/>
        </section>
        <section>
            <datebox disabled="true" label="Disabled" value="12.06.2016"/>
        </section>
    </article>
    <article>
        <h1>Time box</h1>
        <section>
            <timebox label="Simple" value="09 : 00"/>
        </section>
        <section>
            <timebox disabled="true" label="Disabled" value="09 : 00"/>
        </section>
    </article>
    <article>
        <h1>Select</h1>
        <section>
            <select label="Simple">
                <option value="one">First option</option>
                <option value="two">Second option</option>
                <option value="three">Third option</option>
            </select>
        </section>
        <section>
            <select label="Checked">
                <option value="one">First option</option>
                <option value="two" checked="true">Second option</option>
                <option value="three">Third option</option>
            </select>
        </section>
        <section>
            <select label="Disabled" disabled="true">
                <option value="one">First option</option>
                <option value="two" checked="true">Second option</option>
                <option value="three">Third option</option>
            </select>
        </section>
    </article>
    <article>
        <h1>Menu button</h1>
        <section>
            <menubutton controls="simplemenu">Simple menu</menubutton>
            <menu id="simplemenu">
                <menuitem>First menu item</menuitem>
                <menuitem>Second menu item</menuitem>
                <menuitem>Third menu item</menuitem>
            </menu>
        </section>
    </article>
    <article>
        <h1>Dialog</h1>
        <section>
            <dialogbutton controls="simpledialog">Simple dialog</dialogbutton>
            <dialog id="simpledialog">
                <h3>Dialog title</h3>
                <textbox/> <button>Submit</button>
            </dialog>
        </section>
        <section>
            <dialogbutton controls="assertivedialog">Assertive dialog</dialogbutton>
            <dialog id="assertivedialog" assertive="true">
                <h3>Dialog title</h3>
                <textbox/> <button>Submit</button>
                <button action="close" title="Close dialog"/>
            </dialog>
        </section>
        <section>
            <dialogbutton controls="modaldialog">Modal dialog</dialogbutton>
            <dialog id="modaldialog" modal="true">
                <h3>Dialog title</h3>
                <textbox/> <button>Submit</button>
            </dialog>
        </section>
        <section>
            <dialogbutton controls="assertivemodaldialog">Assertive modal dialog</dialogbutton>
            <dialog id="assertivemodaldialog" modal="true" assertive="true">
                <h3>Dialog title</h3>
                <textbox/> <button>Submit</button>
                <button action="close" title="Close dialog"/>
            </dialog>
        </section>
    </article>
    <article>
        <h1>Tab list</h1>
        <tablist>
            <tab controls="tabpanel1" selected="true">One</tab>
            <tab controls="tabpanel2">Two</tab>
            <tab controls="tabpanel3">Three</tab>
        </tablist>
        <tabpanel id="tabpanel1">First panel</tabpanel>
        <tabpanel id="tabpanel2" hidden="true">Second panel</tabpanel>
        <tabpanel id="tabpanel3" hidden="true">Third panel</tabpanel>
    </article>
    <article>
        <h1>Spin</h1>
        <spin/>
    </article>
    <article>
        <h1>Tree</h1>
        <tree>
            <treeitem expanded="true" label="First">
                <group>
                    <treeitem label="Nested 1"/>
                    <treeitem label="Nested 2"/>
                </group>
            </treeitem>
            <treeitem expanded="true" label="Second">
                <group>
                    <treeitem expanded="false" label="Nested 1">
                        <group>
                            <treeitem label="Subnested 1"/>
                            <treeitem label="Subnested 2"/>
                            <treeitem label="Subnested 3"/>
                        </group>
                    </treeitem>
                    <treeitem label="Nested 2"/>
                </group>
            </treeitem>
        </tree>
    </article>
    <article>
        <h1>Mixes</h1>
        <section>
            <button view="link">Button as link</button>
        </section>
        <section>
            <link href="//yandex.ru" mix="button">Link as button</link>
        </section>
        <section>
            <checkbox name="checkbox-button" value="on" view="button">Check button</checkbox>
        </section>
        <section>
            <group label="Check button group" view="buttongroup">
                <checkbox view="button">First</checkbox>
                <checkbox view="button">Second</checkbox>
            </group>
        </section>
        <section>
            <radiogroup name="radio-button-group" view="buttongroup" label="Radio button group">
                <radio value="first" view="button">First</radio>
                <radio value="second" view="button">Second</radio>
                <radio value="third" view="button">Third</radio>
            </radiogroup>
        </section>
    </article>
</main>
