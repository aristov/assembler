import { form, label, input, button, img, br } from 'HTMLDOM'

const websearch = ({ target = '_blank', action, name }) =>
    form({
        action,
        target,
        children : [
            label([
                yandexlogo,
                br(),
                input({ type : 'search', name }),
                ' '
            ]),
            button('Find')
        ]
    })

const yandexlogo = img({
    src : '//yastatic.net/www/_/Q/r/sx-Y7-1azG3UMxG55avAdgwbM.svg',
    alt : 'Yandex',
    width : 50
})

const yandex = websearch({
    action : '//yandex.com/search',
    name : 'text',
})

export default yandex
