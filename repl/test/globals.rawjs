import { form, label, input, button } from '../../htmldom/htmldom';

export const websearch = ({ target = '_blank', action, name }) =>
    form({
        action,
        target,
        children : [
            label([
                'Search ',
                input({ type : 'search', name })
            ]),
            button('Find')
        ]
    })

export const yandex = websearch({ action : '//yandex.com/search', name : 'text' })

export const test = () => document.body.append(yandex)
